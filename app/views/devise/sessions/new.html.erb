<div class="row">
    <div class="col-lg-12">
        <h2 class="text-center"><%= t('login') %></h2>
    </div>
</div>

<div class="row form-group">
  <div class="col-lg-3"></div>

  <div class="col-lg-6 text-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.text_field :login, class: 'form-control', placeholder: t('devise.sessions.email_or_user_name'), autofocus: true %>
      </div>

      <div class="field">
        <%= f.password_field :password, class: 'form-control', placeholder: t('password'), autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit t('login'), class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>

  <div class="col-lg-3"></div>
</div>

<div class="row text-center">
  <div class="col-lg-3"></div>
  <div class="col-lg-6">
    <%= render "devise/shared/links_short_version" %>
  </div>
  <div class="col-lg-3"></div>
</div>

<div class="row text-center mb-5">
  <div class="col-lg-3"></div>
  <div class="col-lg-6">
    <%= render "devise/shared/links" %>
  </div>
  <div class="col-lg-3"></div>
</div>
