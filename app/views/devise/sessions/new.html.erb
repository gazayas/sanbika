<div class="container col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <div id="login_panel" class="panel panel-default">
    <div class="panel panel-heading">
      <h2><%= t(:login) %></h2>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <% now = Time.zone.now %>

      <div class="input_fields">
        <div class="field">
          <div class="input-group">
            <div class="input-group-addon">
              <span class="glyphicon glyphicon-user"></span>
            </div>
            <%= f.text_field :name, class: 'form-control', placeholder: t('activerecord.attributes.user.name'), autofocus: true %>
          </div>
        </div>

        <div class="field">
          <div class="input-group">
            <div class="input-group-addon">
              <span class="glyphicon glyphicon-lock"></span>
            </div>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: t('activerecord.attributes.user.password') %>
          </div>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>      
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit t(:login), class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  
  </div>
</div>