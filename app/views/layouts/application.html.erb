<!DOCTYPE html>
<html>
  <head>
    <title>賛美歌</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <%= favicon_link_tag('onpu.ico') %>
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <%= link_to "賛美歌", home_index_path, class: 'navbar-brand' %>
        <button class="navbar-toggle" data-toggle="collapse" data-target=".navHeaderCollapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <div class="collapse navbar-collapse navHeaderCollapse">
          <!-- TODO: ここに search bar を入れたいです -->
          <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
              <li><%= link_to '<span class="glyphicon glyphicon-home"></span>'.html_safe + " #{current_user.name}さん", current_user %></li>
              <li><%= link_to '<span class="glyphicon glyphicon-new-window"></span> ログアウト'.html_safe, destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to '<span class="glyphicon glyphicon-user"></span> ログイン'.html_safe, new_user_session_path %></li>
              <li><%= link_to '<span class="glyphicon glyphicon-pencil"></span> アカウント登録'.html_safe, new_user_registration_path %></li>
            <% end %>
            <!-- TODO: 情報のページが欲しい
            <li><%# link_to "<span class=\"glyphicon glyphicon-info-sign\"></span> 情報".html_safe,
              {controller: "home",action: "info"} %></li
            -->
          </ul>
        </div>
      </div>
    </nav>

    <div id="main_container" class="container">
      <% if notice %>
        <p class="alert alert-success alert-dismissable" data-dismiss="alert" aria-label="close">
          <%= notice %>
        </p><!-- 前は class="notice" でした -->
      <% elsif alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>

      <%= yield %>
    </div>

  </body>
</html>
