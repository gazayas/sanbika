<h1><%= t(:set_lists) %></h1>

<% if params[:song_id] != nil %>
    <%= render 'select', song_id: params[:song_id] %>
<% else %>
  <div class="text-center">
    <table style="margin-left: auto; margin-right: auto;">
      <thead>
        <tr>
          <th><%= t(:set_list_title) %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @set_lists.each do |set_list| %>
          <tr>
            <td><%= link_to set_list.title, user_set_list_path(@user, set_list) %></td>
            <td><%= link_to t(:edit), edit_user_set_list_path(@user, set_list) %></td>
            <td><%= link_to t(:delete), user_set_list_path(@user, set_list), method: :delete, data: { confirm: t(:confirm_deletion) } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to '<i class="fa fa-pencil"></i> '.html_safe + t(:new_set_list),
      new_user_set_list_path(@user),
      class: 'btn btn-primary btn-sm',
      id: 'new_set_list_button'
    %>
  </div>
<% end %>
