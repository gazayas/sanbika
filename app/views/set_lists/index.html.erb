<h1>Set Lists</h1>

<% if params[:song_id] != nil %>
    <%= render 'select', song_id: params[:song_id] %>
<% else %>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @set_lists.each do |set_list| %>
          <tr>
            <td><%= link_to set_list.title, user_set_list_path(@user, set_list) %></td>
            <td><%= link_to t(:edit), edit_user_set_list_path(@user, set_list) %></td>
            <td><%= link_to t(:delete), user_set_list_path(@user, set_list), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Set List', new_user_set_list_path(@user) %>
<% end %>
