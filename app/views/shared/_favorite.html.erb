<% if user_signed_in? %>
  <% if @favorite != nil %>
    <!-- delete -->
    <%= link_to user_favorite_path(@favorite), method: :delete, remote: true do %>
      <i id="star" class="glyphicon glyphicon-star"></i>
    <% end %>
  <% else %>
    <% @favorite = Favorite.new %>
    <%= form_for [current_user, @favorite], remote: true do |f| %>
      <%= hidden_field_tag :value, true %>
      <%= hidden_field_tag :user_id, current_user.id %>
      <%= hidden_field_tag :song_id, params[:id] %>

      <%= button_tag type: 'submit', style: 'border: none; background: none;' do %>
        <i class="glyphicon glyphicon-star-empty"></i>
      <% end %>
    <% end %>
  <% end %>
<% end %>
