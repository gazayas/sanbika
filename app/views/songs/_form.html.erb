<% col_size = "50" %>

<%= form_for([@user, song]) do |f| %>
  <% if song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(song.errors.count, "error") %>次の問題のため、保存できませんでした：</h2>

      <ul>
      <% song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table id="song_form">
    <tr>
      <td>
        <%= f.text_field :title, class: 'form-control',
        placeholder: t('activerecord.attributes.song.title'), size: col_size %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.text_field :title_yomikata, class: 'form-control',
        placeholder: t('activerecord.attributes.song.title_yomikata'), size: col_size %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.text_field :artist, class: 'form-control',
        placeholder: t('activerecord.attributes.song.artist'), size: col_size %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.text_field :artist, class: 'form-control',
        placeholder: t('activerecord.attributes.song.artist_yomikata'), size: col_size %>
      </td>
    </tr>
    <tr>
      <td>
        <div id="key_text">キー</div>
        <%= f.select(:key, options_for_select(["foo", "bar"]), #(notes[0], :selected => selected_key),
        class: 'form-control', size: col_size) %>
      </td>
    </tr>
  </table>

  <div class="explanation">ここに、讃美歌チャートの作り方の説明を書くこと</div>

  <div class="song_body">
    <%= f.text_area :song_body, class: 'form-control',
    placeholder: t('activerecord.attributes.song.title_yomikata') %>
  </div>

  <%= f.submit class: 'btn btn-primary', value: '保存' %>
  
<% end %>