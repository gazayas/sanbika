<div class="new_set_list_button_div text-center">
  <% if current_user == @user %>
    <!-- TODO: Same CSS as new_chart_button -->
    <%= link_to '<i class="fa fa-pencil"></i> '.html_safe + t(:new_set_list),
      new_user_set_list_path(@user),
      class: 'btn btn-primary btn-sm',
      id: 'new_set_list_button'
    %>
  <% end %>
</div>

<div class="set_lists_header text-center">
  <p><%= @user.username + t(:honorific) + t(:possessive) + t(:set_lists) %></p>
</div>

<div class="set_lists">
  <% if !@user.set_lists.empty? %>
    <ul class="list-group">
      <% @user.set_lists.each do |sl| %>
        <%= link_to sl.title, user_set_list_path(@user, sl), class: 'list-group-item text-center' %><br/>
      <% end %>
    </ul>
  <% else %>
    <h4 class="text-center"><%= t(:no_set_lists) %></h4>
  <% end %>
</div>
